# Application Environment
ENVIRONMENT=development

# Klipper/Moonraker Configuration
KLIPPER_HOST=192.168.0.192
KLIPPER_PORT=7125

# Logging Configuration
LOG_LEVEL=INFO

# Database Configuration
# DB_TYPE: 'sqlite' (기본값) 또는 'mysql'
DB_TYPE=sqlite

# SQLite Configuration (DB_TYPE=sqlite 사용 시)
# SQLITE_DB_PATH=./test.db

# MySQL Configuration (DB_TYPE=mysql 사용 시)
DB_HOST=localhost
DB_PORT=3306
DB_USER=shaker_user
DB_PASSWORD=shakerpassword
DB_NAME=shaker_db
DB_ROOT_PASSWORD=rootpassword

# Database Pool Configuration
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=3600

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
